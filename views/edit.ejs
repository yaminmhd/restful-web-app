<%include ./partials/header%>

<div class = 'container main'>
  <h1>Edit Form</h1>
  <form class="form-signin" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
    <label>Title</label>
    <input class = "form-control" type="text" name="blog[title]" value='<%=blog.title%>'>
    <label>Image Link</label>
    <input class = "form-control" type="text" name="blog[image]" value='<%=blog.image%>'>
    <label>Content</label>
    <textarea class = "form-control" name="blog[text]"><%=blog.text%></textarea>
    <button class="btn btn-primary btn-block" type="submit">Update</button>
  </form>
</div>
<%include ./partials/footer%>
