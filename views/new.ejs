<%include ./partials/header%>

<div class = 'container main'>
  <h1>New Form</h1>
  <form class="form-signin" action="/blogs" method="POST">
    <label>Title</label>
    <input class = "form-control" type="text" name="blog[title]" placeholder="Title">
    <label>Image Link</label>
    <input class = "form-control" type="text" name="blog[image]" placeholder="Image-link">
    <label>Content</label>
    <textarea class = "form-control" name="blog[text]"></textarea>
    <button class="btn btn-primary btn-block" type="submit">Post</button>
  </form>
</div>
<%include ./partials/footer%>
